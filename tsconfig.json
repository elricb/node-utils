{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "moduleDetection": "auto",
    "target": "ES6",
    "declaration": true,
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
